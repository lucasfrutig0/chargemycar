---
import Logo from '../components/Logo.astro'
import SharedLocationButton from '../components/SharedLocationButton'
import Layout from '../layouts/Layout.astro'
---

<Layout title='Home'>
  <main
    class='min-h-screen grid place-items-center text-white text-center container mx-auto text-pretty'
  >
    <div class='flex flex-col items-center gap-4'>
      <div
        class=`relative w-40 h-40 p-0 m-0 border-2 border-blue-electric border-opacity-50 rounded-full overflow-hidden`
        transition:name='logo'
      >
        <Logo />
      </div>

      <h1
        class='tracking-wide font-mono text-4xl uppercase font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-green-500 to-indigo-500'
      >
        ChargeMyCar
      </h1>
      <!-- <p>Share your location to find nearest charging stations</p> -->
      <SharedLocationButton client:load />
    </div>
  </main>
</Layout>
